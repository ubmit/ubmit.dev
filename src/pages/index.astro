---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import SectionHeading from "../components/SectionHeading.astro";
import PostCard from "../components/PostCard.astro";
import SubtleLink from "../components/SubtleLink.astro";
import ArrowUpRightIcon from "../components/ArrowUpRightIcon.astro";
import "../styles/base.css";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <BaseLayout>
    <!-- About Section -->
    <section class="mt-8 sm:mt-16">
      <SectionHeading title="About" />
      <p class="text-gray-1100 leading-7">
        I'm Gui, a Frontend Engineer focused on crafting polished and user-first
        products. I work with AI agents to build software and explore new ways
        of engineering. You can read my ramblings on <SubtleLink
          href="https://x.com/ubmit"
          target="_blank">Twitter</SubtleLink
        >, take a look at my code on <SubtleLink
          href="https://github.com/ubmit"
          target="_blank">GitHub</SubtleLink
        >, and find more about my experience on <SubtleLink
          href="https://www.linkedin.com/in/ubmit/"
          target="_blank">LinkedIn</SubtleLink
        >.
      </p>
    </section>

    <!-- Currently Section -->
    <section class="mt-14 sm:mt-20">
      <SectionHeading title="Currently" />
      <div class="text-gray-1100 space-y-4 leading-7">
        <p>
          I'm diving deep into <em class="text-gray-1200 font-serif italic"
            >agentic engineering</em
          >. I'm building software alongside AI coding agents and exploring how
          to orchestrate multiple agents, manage context effectively, and
          maintain a vendor lock-in-free setup.
        </p>
        <p class="text-sm">
          <a
            href="/writing/agentic-engineering-without-lock-in/"
            class="text-gray-1200 hover:text-gray-1100 inline-flex items-center gap-1 font-medium transition-colors"
          >
            Read more: Agentic engineering without lock-in
            <ArrowUpRightIcon
              class="inline-block"
              aria-label="arrow up right icon"
              size={14}
            />
          </a>
        </p>
        <p>
          Looking for my next role building user-first products with a focus on
          UI. Giving priority to AI-first companies or those making the jump.
          Know something interesting? <SubtleLink href="mailto:gui@ubmit.dev"
            >Let's chat!</SubtleLink
          >
        </p>
        <p>
          I'm also reading <SubtleLink
            href="https://www.youtube.com/watch?v=7Dtu2bilcFs"
            target="_blank">Vibe Coding</SubtleLink
          > by Gene Kim and Steve Yegge. Planning to write about it once I finish.
        </p>
      </div>
    </section>

    <!-- Writing Section -->
    <section class="mt-14 sm:mt-20">
      <SectionHeading title="Writing" />
      <ul class="flex flex-col gap-2">
        {
          posts.map((post, index) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              href={`/writing/${post.id}/`}
              featured={index === 0}
            />
          ))
        }
      </ul>
    </section>
  </BaseLayout>
</html>
