---
interface Props {
  title: string;
  href?: string;
}

const { title, href } = Astro.props;
---

<div class="mb-5 sm:mb-4">
  {
    Boolean(href) ? (
      <a class="hover:text-gray-1100" href={href}>
        {title}
      </a>
    ) : (
      <h2 class="font-medium">{title}</h2>
    )
  }
</div>
